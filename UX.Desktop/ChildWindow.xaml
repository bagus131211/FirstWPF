<Window x:Class="UX.Desktop.ChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UX.Desktop"
        mc:Ignorable="d"
        Title="ChildWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" 
        DataContext="{Binding Child, Mode=OneWay, Source={StaticResource Locator}}">
    <Grid>
        <TextBlock Text="{Binding MessageFromParent}" />
    </Grid>
</Window>
